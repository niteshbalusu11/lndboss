{
  "name": "lndboss",
  "version": "1.15.9",
  "description": "Web Application for BalanceOfSatoshis",
  "author": {
    "name": "Nitesh Balusu",
    "url": "https://twitter.com/nitesh_btc"
  },
  "license": "MIT",
  "keywords": [
    "balanceofsatoshis",
    "lnd",
    "lightning",
    "lightning-network"
  ],
  "scripts": {
    "prebuild": "rimraf dist && rimraf src/client/.next",
    "build:prod": "npm run build:nest && npm run build:next",
    "build:nest": "nest build",
    "build:next": "cd src/client && next build",
    "dev": "NODE_ENV=development nest start --watch",
    "docker:build": "docker build -t niteshbalusu/lndboss . && docker save niteshbalusu/lndboss > lndboss.tar && gzip lndboss.tar",
    "docker:release": "docker buildx build --platform linux/arm64,linux/amd64 --no-cache -t niteshbalusu/lndboss:v1.15.8 --push .",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "push:github": "git push --follow-tags origin master",
    "start": "NODE_ENV=production nest start ",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/server/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "release": "standard-version --release-as minor && yarn build:prod && yarn publish",
    "release:major": "standard-version --release-as major && yarn build:prod && yarn publish",
    "release:patch": "standard-version --release-as patch && yarn build:prod && yarn publish",
    "release:test": "standard-version --dry-run --release-as minor",
    "test": "playwright test",
    "test:client": "playwright test tests/client --headed",
    "test:server": "playwright test tests/server"
  },
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "11.9.3",
    "@mui/icons-material": "^5.8.3",
    "@mui/material": "^5.9.2",
    "@nestjs/common": "^9.0.7",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.7",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.7",
    "@nestjs/platform-socket.io": "^9.0.7",
    "@nestjs/schedule": "^2.1.0",
    "@nestjs/websockets": "^9.0.7",
    "antd": "^4.22.2",
    "async": "^3.2.4",
    "axios": "^0.27.2",
    "balanceofsatoshis": "^12.16.3",
    "bcryptjs": "^2.4.3",
    "chart.js": "^3.8.2",
    "class-sanitizer": "^1.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "dotenv": "^16.0.1",
    "json-to-pretty-yaml": "^1.2.2",
    "jwt-decode": "^3.1.2",
    "lightning": "^5.16.4",
    "nest-winston": "^1.7.0",
    "next": "^12.2.3",
    "notiflix": "^3.2.5",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "react": "^18.2.0",
    "react-chartjs-2": "^4.3.1",
    "react-dom": "^18.2.0",
    "react-js-cron": "^2.1.0",
    "react-jss": "^10.9.1",
    "react-qr-code": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.6",
    "socket.io-client": "^4.5.1",
    "strip-ansi": "^7.0.1"
  },
  "devDependencies": {
    "@mapbox/node-pre-gyp": "^1.0.9",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.1",
    "@next/eslint-plugin-next": "^12.2.3",
    "@playwright/test": "^1.24.0",
    "@types/async": "^3.2.15",
    "@types/cron": "^2.0.0",
    "@types/express": "^4.17.13",
    "@types/node": "16.11.41",
    "@types/passport-local": "^1.0.34",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.1",
    "ln-docker-daemons": "^2.3.2",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.20",
    "standard-version": "^9.5.0",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.3.5"
  }
}
